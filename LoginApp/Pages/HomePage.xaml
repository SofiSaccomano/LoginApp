<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Pages.HomePage"
             BackgroundColor="#d6d6c2"
             Title="Home">

    <Grid>

        <!-- Conteúdo principal -->
        <VerticalStackLayout 
            Margin="5"
            Padding="5"
            Spacing="5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="StartAndExpand">

            <Image HeightRequest="200" WidthRequest="300" Source="logo.png" Margin="0"/>

            <!-- Imagem central -->
            <Image Source="naturalbeauty.png" 
                   Aspect="AspectFill"
                   HeightRequest="400"
                   WidthRequest="250"
                   Margin="0,0,0,5"
                   HorizontalOptions="Center"/>

            <!-- Botão arredondado -->
            <Button Text="CONHEÇA NOSSAS DICAS"
                    BackgroundColor="#b8a88b"
                    TextColor="Black"
                    CornerRadius="20"
                    WidthRequest="250"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"
                    Clicked="ConhecaDicasButton_Clicked"/>


            <Button Text="POLÍTICA E PRIVACIDADE"
                   BackgroundColor="#b8a88b"
                   TextColor="Black"
                   CornerRadius="20"
                   WidthRequest="250"
                   HeightRequest="50"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"
                   Clicked="PoliticaPrivacidade_Clicked"/>

        </VerticalStackLayout>

        <!-- Ícone de perfil -->
        <ImageButton Source="perfilicon.png"
                     WidthRequest="80"
                     HeightRequest="80"
                     HorizontalOptions="End"
                     VerticalOptions="Start"
                     Margin="0,20,20,0"
                     Clicked="PerfilButton_Clicked"/>
    </Grid>
</ContentPage>